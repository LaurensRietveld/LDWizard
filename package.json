    "@typescript-eslint/eslint-plugin": "^3.3.0",
    "@typescript-eslint/parser": "^3.3.0",
    "autoprefixer": "^9.8.0",
    "babel-loader": "^8.0.6",
    "better-npm-run": "^0.1.1",
    "bundlesize": "^0.18.0",
