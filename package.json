    "@babel/preset-env": "^7.8.3",
    "@babel/runtime": "^7.8.3",
    "@pmmmwh/react-refresh-webpack-plugin": "^0.3.3",
    "@types/autoprefixer": "^9.6.1",
    "@types/chai": "^4.2.11",
    "@types/classnames": "^2.2.10",
