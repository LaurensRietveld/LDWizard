{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ESNext",
    "module": "Node16",
    "lib": ["ESNext", "DOM"],
    "useDefineForClassFields": false,
    "experimentalDecorators": true,
    "composite": false,
    "allowImportingTsExtensions": true,
    "strict": true,
    "outDir": "./lib",
    "removeComments": false
  },
  "include": ["./src/**/*", "./webpack/*.ts", "./typings-custom/main.d.ts"],
}
